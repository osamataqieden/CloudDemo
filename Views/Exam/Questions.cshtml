@model IEnumerable<CloudDemo.Models.QuestionModel>
<table id="tblEmployee" data-export="enable" class="dt-column-search_test table table-responsive-sm table-responsive-md table-responsive-lg  table-responsive-xl table-responsive-xxl table-striped table-bordered table-sm table-hover">
    <thead>
        <tr>
            <th data-search="enabled" data-export="enable">Question</th>
            <th data-search="enabled" data-export="enable">Answer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.question
                </td>
                <td>
                    @item.answer
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblExams').DataTable();
        });
    </script>
}

